app-alert
  position fixed
  margin 0 auto
  top 50px
  left 0
  right 0
  max-width 500px
  .alert
    border-radius 10px
    &.alert-danger
      color #A94441
      background-color #F2DEDD
      border-color #ebccd1
    &.alert-info
      color #31708f
      background-color #d9edf7
      border-color #bce8f1
    &.alert-success
      color #3c763d
      background-color #dff0d8
      border-color #d6e9c6
