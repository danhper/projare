.projects
  .panel-title
    position relative
    font-size 2em
    .title
      max-width 100%
      color $primary-color
    .author
      max-width 100%
      display inline-block
      vertical-align bottom
      margin-left 10px
      font-size 0.7em
      & > *
        vertical-align bottom
      .avatar
        max-height 24px
        border-radius 12px
        margin-right 5px
        & + span
          vertical-align bottom
      @media screen and (max-width: $sm-max-width)
        display block
    .category
      display inline-block
      margin-left 10px
      padding 2px
      font-size 0.5em
      border-radius 10px
      vertical-align bottom
      i
        margin 0 5px


  .view-more
    font-size 1.2em
    margin-right 2em
    margin-top 1em

.no-projects
  font-size 1.3em
  text-align center
  margin-top 50px
  .back
    display block
    margin-top 30px
