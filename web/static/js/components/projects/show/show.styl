.projects-show
  .header
    position relative
    margin-bottom 10px
    .stars
      absolute bottom 0 right 30px
      cursor pointer
      &.starred
        background #bbb
      @media screen and (max-width: $sm-max-width)
        position static
        display block
        text-align center
        margin 0 auto 0.5em auto
        padding-top 0
        padding-bottom 0
        font-size 0.6em
        & > *
          font-size 0.6em

  .discret-links
    a
      text-decoration none
      &:hover
        opacity 0.8
  .sub-header
    vertical-align middle
    .avatar
      margin-left 10px
    .url
      font-size 0.8em
      font-family monospace
      margin-bottom 1em
    .category
      font-size 0.8em
      margin 0.8em 0
    .actions
      .edit
        margin-right 5px
      .delete
        spinner svg
          margin -10px 0
