<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Projare</title>

    <!-- material design fonts -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">

    <!-- vendors CSS using CDN -->
    <%= if Mix.env == :dev do %>
      <link rel="stylesheet" href="<%= static_path(@conn, "/components/bootstrap/dist/css/bootstrap.css") %>">
      <link rel="stylesheet" href="<%= static_path(@conn, "/components/bootstrap-material-design/dist/css/ripples.css") %>">
      <link rel="stylesheet" href="<%= static_path(@conn, "/components/font-awesome/css/font-awesome.css") %>">
      <link rel="stylesheet" href="<%= static_path(@conn, "/components/devicon/devicon.css") %>">
      <link rel="stylesheet" href="<%= static_path(@conn, "/components/devicon/devicon-colors.css") %>">

    <% else %>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.8/css/ripples.min.css">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="https://cdn.rawgit.com/konpa/devicon/master/devicon.min.css">
    <% end %>

    <link rel="stylesheet" href="<%= static_path(@conn, "/components/dropdown.js/jquery.dropdown.css") %>">

    <link rel="stylesheet" href="<%= static_path(@conn, "/js/theme.css") %>">

    <!-- app -->
    <link rel="stylesheet" href="<%= static_path(@conn, "/js/app.css") %>">
  </head>

  <body>

    <%= render @view_module, @view_template, assigns %>

    <!-- vendors JS using CDN -->
    <%= if Mix.env == :dev do %>
      <script src="<%= static_path(@conn, "/components/jquery/dist/jquery.js") %>"></script>
      <script src="<%= static_path(@conn, "/components/bootstrap/dist/js/bootstrap.js") %>"></script>
      <script src="<%= static_path(@conn, "/components/bootstrap-material-design/dist/js/material.js") %>"></script>
      <script src="<%= static_path(@conn, "/components/bootstrap-material-design/dist/js/ripples.js") %>"></script>
    <% else %>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.8/js/material.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.8/js/ripples.min.js"></script>
    <% end %>

    <script src="<%= static_path(@conn, "/components/dropdown.js/jquery.dropdown.js") %>"></script>

    <!-- bundled vendors -->
    <script src="<%= static_path(@conn, "/js/vendor.js") %>"></script>
    <!-- app -->
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>

    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '<%= Application.get_env(:projare, :facebook)[:api_key] %>',
          xfbml      : true,
          version    : 'v2.5'
        });
      };
      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    </script>
  </body>
</html>
